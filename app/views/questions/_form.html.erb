<%= form_for ([@game, @question]), :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Question", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :text, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :correct_answer, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :correct_answer, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.hidden_field :game_id, :value => @game.id %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :points, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :points, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                game_path(@game.id), :class => 'btn' %>
  </div>
<% end %>
