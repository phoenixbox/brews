<%= form_for @question, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :text, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :correct_answer, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :correct_answer, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :game_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :game_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :order, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :order, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :points, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :points, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questions_path, :class => 'btn' %>
  </div>
<% end %>
