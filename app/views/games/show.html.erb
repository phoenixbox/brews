<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @game.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pin) %>:</strong></dt>
  <dd><%= @game.pin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:question_time) %>:</strong></dt>
  <dd><%= @game.question_time %></dd>
</dl>

<% if current_user && @game.current_user?(current_user.id) %>
  <div class="form-actions">
    <% if @game.active == false %>
      <%= link_to "Start Game", game_activate_path(@game.id), method: :put, class: "btn btn-success"%>
    <% else %>
      <%= link_to "Stop Game", game_deactivate_path(@game.id), method: :put, class: "btn btn-success"%>
    <% end %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_game_path(@game), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                game_path(@game),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
<% end %>