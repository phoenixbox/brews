<% broadcast "/games/#{@game.id}/current-question" do %>
  $("#current-question").html("<%= j @question.next_text %>");
  <% if @next_question %>
    $("#current-form").html("<form accept-charset='UTF-8' action='/submissions' class='new_submission' id='new_submission' method='post'><div class='field'><input id='submission_question_id' name='submission[question_id]' type='hidden' value=<%=@next_question.id %> /></div><div class='field'><h3><span class='red'>A: </span><input id='submission_content' name='submission[content]' size='30' type='text' /></h3></div><div class='actions'><input class='btn btn-success' name='commit' type='submit' value='Submit Answer' /></div></form>");
  <% else %>
    $("#current-form").html("")
  <% end %>
<% end %>
