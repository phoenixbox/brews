<div class="row-fluid text-center">
  <h1><%= @team.title.capitalize %></h1>
</div>
<div class="row-fluid text-center">
  <div class="span4">
    <h3>Join a Game!</h3>
    <ul><% @games.each do |game| %>
      <li><%= link_to game.title, game_path(game.id) %></li>
      <% end %>
    </ul>
  </div>
  <div class="span4">
    <h3>Previous Games</h3>
  </div>
  <div class="span4">
    <h3>Team Members</h3>
  </div>
</div>
