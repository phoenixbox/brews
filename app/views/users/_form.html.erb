<div>
  <h1>Register</h1>
  <p>Already registered? <%= link_to "Sign in", login_path %>.</p>
  <%= form_for @user do |f| %>
    <div class="field">
    <%= f.label :email, :class => 'control-label' %>
      <%= f.text_field :email, :class => 'text_field', :placeholder => "example@gmail.com" %>
    </div>
    <div class="field">
      <%= f.label :password, :class => 'control-label' %>
      <%= f.password_field :password, :class => 'number_field', :placeholder => "6-10 characters" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, :class => 'control-label' %>
      <%= f.password_field :password_confirmation, :class => 'number_field', :placeholder => "6-10 characters" %>
    </div>
    <div class="actions"><%= submit_tag "Sign Up", :class => "btn btn-success" %></div>
  <% end %>
</div
