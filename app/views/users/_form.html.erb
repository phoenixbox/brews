<div class="well well-large">
  <h1>Create a Brews-N-Q's Account</h1>
  <p>Already registered? Click <%= link_to "here", login_path %></p>
  <%= form_for @user do |f| %>
    <div class="field">
    <%= f.label :email, :class => 'control-label' %>
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
    <div class="field">
      <%= f.label :password, :class => 'control-label' %>
      <%= f.password_field :password, :class => 'number_field' %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, :class => 'control-label' %>
      <%= f.password_field :password_confirmation, :class => 'number_field' %>
    </div>
    <div class="actions"><%= submit_tag "Sign Up", :class => "btn btn-success" %></div>
  <% end %>
</div
